{
  "name": "gravity",
  "displayName": "Gravity",
  "description": "Antigravity quota guardian - monitors AI model usage and protects you from cooldown penalties",
  "version": "1.0.1",
  "publisher": "Isonimus",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gravity.refresh",
        "title": "Gravity: Refresh Quota"
      },
      {
        "command": "gravity.showStatus",
        "title": "Gravity: Show Quota Status"
      },
      {
        "command": "gravity.toggleGuard",
        "title": "Gravity: Toggle Protection"
      },
      {
        "command": "gravity.showLogs",
        "title": "Gravity: Show Debug Logs"
      },
      {
        "command": "gravity.reconnect",
        "title": "Gravity: Reconnect"
      }
    ],
    "configuration": {
      "title": "Gravity",
      "properties": {
        "gravity.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Gravity quota monitoring and protection",
          "order": 1
        },
        "gravity.warningThreshold": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 50,
          "description": "Show warning when quota falls below this percentage",
          "order": 2
        },
        "gravity.blockThreshold": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 20,
          "description": "Show blocking modal when quota falls below this percentage",
          "order": 3
        },
        "gravity.pollingInterval": {
          "type": "number",
          "default": 120,
          "minimum": 30,
          "maximum": 600,
          "description": "Polling interval in seconds (minimum: 30s)",
          "order": 4
        },
        "gravity.guardEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable quota protection (show warnings/blocks when thresholds reached)",
          "order": 5
        },
        "gravity.pinnedModels": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Model IDs to display in the status bar. If empty, shows worst quota.",
          "order": 6
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "npm run compile && npx vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Isonimus/Gravity.git"
  },
  "bugs": {
    "url": "https://github.com/Isonimus/Gravity/issues"
  },
  "homepage": "https://github.com/Isonimus/Gravity#readme",
  "keywords": [
    "antigravity",
    "quota",
    "ai",
    "guardian",
    "protection"
  ],
  "author": "Isonimus",
  "license": "MIT"
}